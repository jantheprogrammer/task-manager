{
  "name": "task-management-heroku",
  "version": "1.0.0",
  "description": "Task management on heroku",
  "main": "server.js",
  "engines": {
    "node": "10.x"
  },
  "scripts": {
    "start": "node server.js",
    "build": "cd client/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "server-start": "nodemon server.js",
    "client-start": "cd client/ && npm start",
    "client-install": "cd client/ && npm install",
    "dev": "concurrently \"npm run server-start\" \"npm run client-start\""
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ],
  "keywords": [
    "todo",
    "list"
  ],
  "author": "Jan Krejca",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.2",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "mongoose": "^5.8.10",
    "nodemon": "^1.19.4",
    "path": "^0.12.7"
  }
}
